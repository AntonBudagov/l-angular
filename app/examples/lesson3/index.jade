extends ../../layouts/index.jade

block head-title
    | - lesson 3

block styles
    link(href="style.css", rel="stylesheet")

block scripts
    script(src='main.js')

block content
  //- .container(ng-app="todomvc" ng-controller="TodoCtrl as todoCtrl")
    section#todoapp
      header#header
        h1 Todos3
        form#todo-form(ng-submit="todoCtrl.addTodo()")
          input#new-todo(placeholder="what needs to do" ng-model="todoCtrl.newTodo" autofocus)

    section#main(ng-show="todoCtrl.todos.length")
      ul
        li(ng-repeat="todo in todoCtrl.todos track by $index")
          .view
            lable{{todo.title}}
            button.btn.btn-danger(type="button" ng-click="todoCtrl.delTodo(todo)") remove

