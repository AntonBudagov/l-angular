.panel.panel-info
  .panel-heading
    h3.panel-title {{UserController.user.fullName}}
  .panel-body
    .row
      .col-md-3.col-lg-3(align="center")
        img(ng-src="{{userController.user.avatarUrl}}")
      .col-md-9.col-lg-9
        table.table.table-user-information
          tbody
            tr
              td date birth
              td {{UserController.user.birthdate}}
            tr
              td gender
              td {{UserController.user.gender}}
            tr
              td Adreess
              td {{UserController.user.address}}
            tr
              td email
              td
                a(href="mailto:{{UserController.user.email}}") {{UserController.user.email}}
  .panel-footer